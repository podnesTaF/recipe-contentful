@using Contentful.Core.Models
@using WebApplication1.Utilities

@model ContentfulCollection<Recipe>

<div class="max-w-5xl mx-auto my-6">
    <h1 class="text-3xl font-bold mb-6">Shared Recipes</h1>
    <div class="flex justify-between w-full gap-6 flex-wrap">
      @foreach (var recipe in Model)
        {
          <div class="w-[300px] border-[1px] border-gray-300 rounded-md flex flex-col items-center gap-4">
           <img src="@recipe.Image?.File?.Url" alt="@recipe.Image?.Title" class='object-cover object-center w-auto h-48' />
           <div class="py-2 px-4 w-full">
              <h2 class="text-xl font-semibold">@recipe.Title</h2>
              <p class="text-[#64C9C9] mb-2">@StringHelper.TruncateDescription(recipe.Description, 80)</p>
              <div class="flex justify-end">
                <a href="@Url.Action("Details", "Recipe", new { id = recipe.Sys.Id })" class="font-semibold text-black px-3 py-2 border-2 border-[#64C9C9] hover:opacity-90 rounded-md">View Recipe</a>
              </div>
           </div>
          </div>
        }
    </div>
</div>